{
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "assets/icons/icon.png",
        "default_popup": "index.html",
        "default_title": "uTorrent easy client"
    },
    "background": {
        "scripts": [
            "commons.chunk.js",
            "bg.js"
        ]
    },
    "icons": {
        "128": "assets/icons/icon_128.png"
    },
    "permissions": [ "http://*/*", "https://*/*", "storage", "notifications", "tabs", "contextMenus" ],
    "name": "uTorrent easy client",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "options_page": "options.html",
    "version": "2.7.0"
}